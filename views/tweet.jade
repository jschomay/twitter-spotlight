li.stream-item(class="#{tweet.minimized ? 'minimized' : ''}")
  .tweet(class="#{tweet.minimized ? 'minimized' : ''} #{tweet.classes ? tweet.classes : ''}", data-screen_name="#{tweet.user.screen_name}", data-id_str="#{tweet.id_str}")
    .content
      .stream-item-header      
        a.account-group(href='https://twitter.com/'+tweet.user.screen_name)
          img.avatar(src=tweet.user.profile_image_url_https)
          strong.fullname 
            =tweet.user.name
          span.username  
            @
            =tweet.user.screen_name
        small.time
          a.tweet-timestamp(href='https://twitter.com/'+tweet.user.screen_name+'/status/'+tweet.id_str)
            span._timestamp 
              =tweet.created_at
      .tweet-text
        !=tweet.text
      .stream-item-footer
  if tweet.spotlightReasons
    img.spotlight-indicator(src="/images/logo/drawable-mdpi/ic_launcher.png")
    ul.reasons
      | Spotlighted because:
      each reason in tweet.spotlightReasons
        li.reason #{reason}
