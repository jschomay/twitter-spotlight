// colors
highlight1 = #3266A8
highlight2 = lighten(highlight1, 20%)
background1 = darken(highlight1, 60%)
background2 = darken(highlight1, 20%)
dark = #2e2e2e
light = #eee
borderColor = #ddd
lightText = #eee
darkText = #333


// breakpoints
midBreakPoint = 950px
mobileBreakPoint = 320px

mid = "all and (max-width: " + midBreakPoint + ")"
mobile = "all and (max-width: " + mobileBreakPoint + ")"

fullWidth = 60%
midWidth = 80%
mobileWidth = 100%

*
  box-sizing border-box
  -moz-box-sizing border-box

body
  background background1
  font-size 12pt
  line-height 12pt

header
  color lightText
  width fullWidth
  margin auto
  position relative
  background highlight2

  @media mobile
    position fixed
    left 0
    right 0
    z-index 9

  @media mid
    width midWidth

  @media mobile
    width mobileWidth

  .title
    margin 0%
    margin-left 60px
    height 64px
    padding 10px
    font-size 160%
    font-weight normal
    line-height 90%

    @media mobile
      font-size 120%
      margin-left 50px
      height 55px

    .tagline
      margin 0%
      padding 5px 0
      font-size 60%
      line-height 100%
      font-weight normal

  .logo
    position absolute
    margin-top 8px
    margin-left 8px
    top 0%
    left 0%
    border 2px solid highlight1
    width 48px

    @media mobile
      width 44px
      margin-top 5px 
      margin-left 5px 

  .info-bar
    padding 1% 2%
    font-size 70%
    background dark
    position relative
    overflow hidden

    &.expanded
      border-bottom 2px solid darken(lightText, 30)
      .show-options:after
        content " \25b2"
      .options
        max-height 350px

    a
      color darken(lightText, 30%)
      &:hover
        color darken(lightText, 20%)

    div
      display inline-block

    .log-out
      margin-right 10px
      float right

    .show-options
      float right
      cursor pointer
      &:after
        content " \25BC"
        font-size 70%

    .options
      display block
      overflow auto
      list-style-type none
      padding-left 0
      font-size 120%
      transition max-height 500ms
      -webkit-transition max-height 500ms
      -moz-transition max-height 500ms
      -o-transition max-height 500ms
      max-height 0
      margin 1% 0 -1%

      li
        padding 10px 0
        width 100%
        border-top 1px dotted darken(lightText, 70%)

.page
  width fullWidth
  margin auto
  padding 0% 1%
  background background2
  position absolute
  left 0
  right 0

  @media mid
    width midWidth

  @media mobile
    width mobileWidth
    margin-top 77px

.page-content
  background white
  padding 10px 20px
  border-bottom 2px solid dark

  .sign-in
    background light
    padding 10px
    border 1px solid borderColor
    margin 30 0
    text-align center
    font-size 90%
    font-weight bold
    a
      display block
      margin-top 10px

  img.screenshot
    margin auto
    display block
    border 1px solid borderColor

    @media mid
      width 100%

  h5 
    margin-bottom 10px

  ul ul
    margin 10px
    padding-left 20px
    li
      list-style-type disc
      margin-left 10px

  .credits
    border-top 1px solid borderColor
    margin-top 20px
    padding-top 20px

.stream
  background light

  ol.stream-items
    margin 0
    margin-bottom 1%
    padding 0
    list-style-type: none
    
    .stream-item
      background white
      border-bottom 1px solid borderColor
      overflow hidden
      position relative
      &:hover
        background darken(white, 5%)

      .tweet
        padding 2% 1.5% 5%
        cursor pointer
        transition all 100ms

        .content
          margin-left 58px

          .stream-item-header
            padding-bottom 1.5%

            .account-group
              text-decoration none
              color darkText

              .avatar
                float left
                margin-top 0.5%
                margin-left -56px
                width 48px
                border-radius 10%

              .fullname
                font-weight bold

              .username
                font-size 90%
                font-weight normal
                color lighten(darkText, 30%)

            .time
              // TODO - display this better
              display none

        .tweet-text
          color darkText
          white-space pre-wrap
          word-wrap break-word
          font-size 90%
          line-height 140%
          text-decoration none

          a
            color highlight1

    .spotlight-indicator
      position absolute
      top 0px
      right 0px
      width 25px
      border 1px solid highlight1
      cursor pointer

    .reasons
      padding 0% 2%
      background dark
      margin 0% 0 2% 0%
      position relative
      color lightText
      font-size 80%
      transition all 500ms
      -webkit-transition all 500ms
      -moz-transition all 500ms
      -o-transition all 500ms
      // left 100%
      max-height 0
      overflow hidden

      &.reveal
        padding 1% 2%
        // left 0%
        max-height 200

      .reason
        padding .5%
        list-style-type none
        padding-left 2%

        
// minimized tweets styles - spotlight mode
.stream.spotlight ol.stream-items .tweet.minimized, .stream.hide ol.stream-items .tweet.minimized
  padding-bottom 1%
  line-height 40%
  .content 
    margin-left 30px
    .stream-item-header
      padding-bottom 0
      .account-group
        .avatar
          width 23px
          margin-top 0%
          margin-left -30px
          border-radius 15%

          @media mobile
            margin-top -1%

        .fullname
          font-size 70%
        .username
          font-size 60%
    .tweet-text
      font-size 75%
      overflow hidden
      display inline-block
      width 100%
      white-space nowrap
      overflow hidden
      text-overflow ellipsis

// minimized tweets styles - hide mode
.stream.hide ol.stream-items .tweet.minimized
  height 5px
  overflow hidden
  padding 0
  background lightText

// minimized tweets styles - highlight mode
.stream.highlight ol.stream-items .stream-item
  background lighten(highlight1,80%)
  &.minimized
    background none

.feedback-form
  textarea
    width 100%
    margin 5px 0